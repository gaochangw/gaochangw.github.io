---
import { siteConfig } from "../config";
const honors = siteConfig.honors ?? [];
const hasHonors = honors.length > 0;
const honorsTitle = siteConfig.honorsTitle || "Honors";
---

{
  hasHonors && (
    <section id="honors" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              {honorsTitle}
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {honors.map((honor) => (
                <article class="rounded-xl border border-gray-200 bg-white p-5 sm:p-6 md:p-8 shadow-sm transition hover:shadow-md">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 sm:gap-6">
                    <div>
                      <h3 class="text-xl font-semibold text-gray-900">
                        {honor.title}
                      </h3>
                      <p
                        class="text-sm font-medium uppercase tracking-wide text-gray-500"
                      >
                        {honor.organization}
                      </p>
                    </div>
                    {
                      honor.year && (
                        <span class="text-sm font-semibold text-gray-500">
                          {honor.year}
                        </span>
                      )
                    }
                  </div>
                  {
                    honor.description && (
                      <p class="mt-4 text-base leading-relaxed text-gray-600">
                        {honor.description}
                      </p>
                    )
                  }
                  {
                    honor.link && (
                      <a
                        href={honor.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="mt-4 inline-flex items-center text-sm font-semibold text-gray-700 hover:text-gray-900"
                      >
                        Learn more
                        <svg
                          class="ml-2 h-4 w-4"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          viewBox="0 0 24 24"
                        >
                          <path d="M5 12h14" />
                          <path d="M12 5l7 7-7 7" />
                        </svg>
                      </a>
                    )
                  }
                </article>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
